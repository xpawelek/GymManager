@page
@model GymManagerWebApp.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja nowego użytkownika</h2>

<form method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Input.FirstName" class="form-label">Imię</label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.LastName" class="form-label">Nazwisko</label>
        <input asp-for="Input.LastName" class="form-control" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Hasło</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DateOfBirth" class="form-label">Data urodzenia</label>
        <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.PhoneNumber" class="form-label">Numer telefonu</label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zarejestruj się</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
