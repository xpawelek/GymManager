@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GymManager</title>

    <!-- 1. Bootstrap CSS z podkatalogu dist -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- 2. Własne style -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">GymManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName.Contains("/Index") ? "active" : "")"
                               asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName.Contains("/TypyKarnetow") ? "active" : "")"
                               asp-page="/TypyKarnetow">Typy karnetów</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName.Contains("/MojeKarnety") ? "active" : "")"
                               asp-page="/MojeKarnety">Moje karnety</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName.Contains("/Zajecia") ? "active" : "")"
                               asp-page="/Zajecia">Zajęcia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.ActionDescriptor.DisplayName.Contains("/Sprzet") ? "active" : "")"
                               asp-page="/Sprzet">Sprzęt</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account/Login">Zaloguj</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account/Register">Zarejestruj</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Dodaj trochę odstępu od góry, bo navbar jest fixed-top -->
    <div class="container mt-5 pt-3">
        @RenderBody()
    </div>

    <footer class="footer bg-light border-top py-3 mt-auto">
        <div class="container text-center">
            <span class="text-muted">© 2025 – GymManager. Wszelkie prawa zastrzeżone.</span>
        </div>
    </footer>

    <!-- 3. jQuery (tylko jeśli naprawdę potrzebujesz, bo Bootstrap 5 działa bez jQuery) -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- 4. Bootstrap JS z podkatalogu dist -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
